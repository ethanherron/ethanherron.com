---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Neural Finite Element Networks">
    <article class="max-w-4xl mx-auto">
        <header class="mb-12 text-center">
            <h1 class="text-5xl font-bold mb-4">Neural Finite Element Networks</h1>
            <div class="text-lg text-gray-500 dark:text-gray-400">
                By Ethan Herron, Biswajit Khara, Baskar Ganapathysubramanian, Adarsh Krishnamurthy
            </div>
        </header>

        <div class="grid grid-cols-12 gap-8">
            {/* Table of Contents */}
            <nav class="col-span-3 hidden lg:block sticky top-8 self-start h-fit bg-gray-50 dark:bg-gray-800/50 rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6">Contents</h2>
                <ul class="space-y-3 text-sm">
                    <li>
                        <a href="#finite-element" class="hover:text-primary transition-colors duration-200">
                            Finite Element Inspired Neural PDE Solvers
                        </a>
                    </li>
                    <li>
                        <a href="#neural-networks" class="hover:text-primary transition-colors duration-200">
                            Neural Finite Element Networks
                        </a>
                    </li>
                    <li>
                        <a href="#conclusion" class="hover:text-primary transition-colors duration-200">
                            Conclusion
                        </a>
                    </li>
                    <li>
                        <a href="#references" class="hover:text-primary transition-colors duration-200">
                            References
                        </a>
                    </li>
                </ul>
            </nav>

            {/* Main Content */}
            <div class="col-span-12 lg:col-span-9 bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
                <iframe 
                    src="https://idealab-isu.github.io/NeuralFiniteElementNetworks/content/main.html"
                    class="w-full min-h-screen border-none"
                    title="Neural Finite Element Networks"
                    loading="lazy"
                />
            </div>
        </div>
    </article>
</Layout>

<style>
    /* Add smooth scrolling for section jumps */
    html {
        scroll-behavior: smooth;
    }

    /* Style scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    /* Ensure iframe content is responsive */
    iframe {
        aspect-ratio: 16/9;
        min-height: 100vh;
    }
</style> 